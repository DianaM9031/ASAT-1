<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.asat.amesoft.asat.fragments.MenuFragment">


    <Button
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/hospital"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/hospital_title"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="69dp"
        android:id="@+id/menu_hospital"
        android:onClick="goHospital"/>

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/history"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/record_title"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="69dp"
        android:id="@+id/menu_record"
        android:onClick="goRecord"/>

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/advises"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/advices_title"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/menu_hospital"
        android:layout_alignStart="@+id/menu_hospital"
        android:id="@+id/menu_advices"
        android:onClick="goAdvices"/>

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/menu_notifications"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/notifications"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/notifications_title"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/menu_advices"
        android:layout_alignLeft="@+id/menu_record"
        android:layout_alignStart="@+id/menu_record"
        android:onClick="goNotifications"/>

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/configure"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/settings_title"
        android:textAllCaps="false"
        android:id="@+id/menu_config"
        android:layout_below="@+id/menu_advices"
        android:layout_alignLeft="@+id/menu_advices"
        android:layout_alignStart="@+id/menu_advices"
        android:layout_marginTop="55dp"
        android:onClick="goSettings"/>

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/menu_about"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/about"
        android:layout_width="@dimen/icons"
        android:layout_height="@dimen/icons"
        android:text="@string/about_title"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/menu_config"
        android:layout_alignLeft="@+id/menu_notifications"
        android:layout_alignStart="@+id/menu_notifications"
        android:onClick="goAbout"/>


</RelativeLayout>
